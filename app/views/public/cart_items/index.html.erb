<pi id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-lg-3" >
      <h5 class="mt-2 ml-4 mr-5"style="background-color: LightGray;">ショッピングカート</h5>
    </div>
    <div class ="col-lg-7">

    </div>
      <div class ="col-lg-2">
        <%= link_to "カートを空にする",  public_cart_items_destroy_all_path, method: :delete,class:"btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 cpl-md-8 col-lg-11 px-5 px-sm-0 mx-auto">

<table class="table table-bordered border-primary mt-2">
  <thead class="table-secondary">
    <th >商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する",  public_cart_item_path(cart_item.id), method: :delete,class:"btn btn-sm btn-danger" %></td>

      <% @total_price += cart_item.subtotal %>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-3 mx-auto">
      <%= link_to "買い物を続ける", public_root_path, class:"btn btn-sm btn-primary" %>
    </div>
      <div class ="col-4">
      </div>
        <table class="table table-bordered border-primary col-4 mt-2">
          <thead>
            <th class="table-secondary">
              <div>合計金額</div>
            </th>
            <th>
              <div><%= @total_price %></div>
            </th>
           </thead>
        </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="mx-auto mt-4">
      <%= link_to "情報入力に進む",new_public_order_path, class:"btn btn-sm btn-success" %>
    </div>
  </div>
</div>

