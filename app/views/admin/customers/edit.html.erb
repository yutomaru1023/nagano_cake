<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>


<table>
  <thead>
    <tr>
      <th></th>
      <th></tgh>
    </tr>
  </thead>
  <%= form_with model: @customer, url: admin_customer_path do |f| %>
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_active,"有効" %>

          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_active,"退会" %>
      </td>
    </tr>
  </tbody>
</table>
  <%= f.submit "変更を保存", class:"btn btn-success" %>
  <% end %>