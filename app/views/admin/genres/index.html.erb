<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path do |f| %>

<div class="form-group">
  <label for="genre_name">ジャンル名</label>
  <input class="form-control genre_name"<%= f.text_field :name %>
</div>

<div class="form-group">
  <input class="btn btn-secondary"<%= f.submit '新規登録' %>
</div>
<% end %>

<table class="table table-hover table-inverse">
    <thead>
      <tr>
       <th>ジャンル</th>
       <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
       <tr>
         <td><%= genre.name %></td>
         <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-sm btn-success"%></td>
       </tr>
      <% end %>
    </tbody>
  </table>