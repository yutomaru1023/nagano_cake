<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path do |f| %>
<div class="form-group">
  <label>商品画像</label>
    <%= f.file_field :item_image %></div>
  <label>商品名</label>
    <%= f.text_field :name %>
  <label>商品説明</label>
    <%= f.text_field :introduction %>
  <label>ジャンル</label>
    <%= f.collection_select(:genre_id,Genre.all,:id,:name,{ include_blank: true, selected:'選択'}) %>
  <label>税抜価格</label>
    <%= f.text_field :price %>
  <label>販売ステータス</label>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active,"販売中" %>

    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active,"販売停止中" %>

</div>
    <%= f.submit "変更を保存", class:"btn btn-success" %>
<% end %>

