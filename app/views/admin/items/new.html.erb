<h1>商品新規登録</h1>



<%= form_with model: @item, url: admin_items_path do |f| %>

<div class="form-group">
  <label for="item_image">商品画像</label>
  <%= f.file_field :item_image %>
</div>

<div class="form-group">
  <label for="name">商品名</label>
  <input class="form-control name"<%= f.text_field :name %>
</div>

<div class="form-group">
  <label for="item_introduction">商品説明</label>
  <textarea class="form-control introduction"<%= f.text_area :introduction %>

</div>

<div class="form-group">
  <label for="genre">ジャンル</label>
  <%= f.collection_select(:genre_id,Genre.all,:id,:name,{ include_blank: true, selected:'選択'}) %>

</div>

<div class="form-group"
  <label for="price">税抜価格</label>
  <input class="form-control name"<%= f.text_field :price %>円
</div>

<div class="form-group">
  <label for="is_active">販売ステータス</label>
   <%= f.radio_button :is_active,true %>
   <%= f.label :is_active,"販売中" %>

   <%= f.radio_button :is_active,false %>
   <%= f.label :is_active,"販売停止中" %>
</div>

<div class="form-group">
  <input class="btn btn-secondary"<%= f.submit '新規登録' %>
</div>



<% end %>